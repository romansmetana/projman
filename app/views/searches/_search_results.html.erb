<% search_results.each do |s| %>
  <div class="col-lg-4 col-md-4 col-sm-6">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex justify-content-center col-lg-2">
        <div class="p-1 m-1">
          <small class="px-2 py-1 border border-warning rounded-pill"><%= t("controllers.search.#{s.class.name.downcase}") %></small>
        </div>
      </div>
      <div class="col-lg-10 p-1 m-1">
        <small class='ms-3 text-end'><%=link_to highlight(s.title, params[:title]), s %></small>
      </div>
    </div>
  </div>
<% end %>